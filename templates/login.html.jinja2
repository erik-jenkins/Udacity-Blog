<div class="container col-xs-12 col-sm-6 col-sm-offset-3">
	{% if loginError %}
		<div class="container col-xs-12" id="loginError">
			<p class="bg-danger">Error: Incorrect username or password.</p>
		</div>
	{% endif %}
	<form action="/login" method="post">
		<div class="form-group">
			<label for="username">Username</label>
			<input type="text" class="form-control {{'form-error' if username_error}}" id="username" name="username" placeholder="username" value="{{username}}">
		</div>
		<div class="form-group">
			<label for="password">Password</label>
			<input type="password" class="form-control {{'form-error' if password_error}}" id="password" name="password" placeholder="password">
		</div>
		<div class="form-group">
			<button type="submit" class="btn btn-primary">Submit</button>
		</div>
	</form>
</div>