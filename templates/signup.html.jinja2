<div class="container col-xs-12 col-sm-6 col-sm-offset-3">
	<form action="/signup" method="post">
		<div class="form-group">
			<label for="username">Username</label>
			<input type="text" class="form-control {{'form-error' if username_error}}" id="username" name="username" placeholder="username" value="{{username}}">
		</div>
		<div class="form-group">
			<label for="password">Password</label>
			<input type="password" class="form-control {{'form-error' if password_error}}" id="password" name="password" placeholder="password" value="{{password}}">
		</div>
		<div class="form-group">
			<label for="verify">Verify</label>
			<input type="password" class="form-control {{'form-error' if verify_error}}" id="verify" name="verify" placeholder="verify" value="{{verify}}">
		</div>
		<div class="form-group">
			<label for="email">Email</label>
			<input type="email" class="form-control {{'form-error' if email_error}}" id="email" name="email" placeholder="address@example.com" value="{{email}}">
		</div>
		<div class="form-group">
			<button type="submit" class="btn btn-primary">Submit</button>
		</div>
	</form>
</div>